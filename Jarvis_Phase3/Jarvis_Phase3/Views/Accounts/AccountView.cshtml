@model Jarvis_Phase3.Models.EditableUser

@{
    ViewBag.Title = "AccountView";
    Layout = "~/Views/Shared/_ConsumerDashboardTheme.cshtml";
}

@section Styles{
    <style>
        .text-right {
            color: white;
            margin-top: 16px;
            font-size: 24px;

        }
         .text-right a {
            color: white;
            font-size: 20px;
         }

         .text-right i {
            font-size: 24px;
         }

         .user-info {
             padding: 10px;
         }

         .user-info span {
            font-weight: bold;
         }

    </style>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading clearfix">
                <h3 class="col-xs-8  col-sm-8">Profile </h3>
                <div class="col-xs-4  col-sm-4 text-right">
                    <a href="@Url.Action("EditAccount", "Accounts", null )">Edit  <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="user-info clearfix">
                <p class="username col-sm-6"><span>User Name:</span> @Model.UserName </p>
                <p class="email col-sm-6"><span>Email</span> @Model.Email </p>
                <p class="first col-sm-6"><span>First Name:</span> @Model.FirstName </p>
                <p class="last col-sm-6"><span>Last Name:</span> @Model.LastName  </p>             
            </div>
        </div>
    </div>
</div>

