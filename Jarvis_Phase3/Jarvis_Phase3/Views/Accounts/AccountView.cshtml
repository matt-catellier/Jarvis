@model Jarvis_Phase3.Models.EditableUser

@{
    ViewBag.Title = "AccountView";
    Layout = "~/Views/Shared/_DashBoardTheme.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Account <small> Profile</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-user"></i> Account
            </li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="col-sm-8 page-content">
        <div>
            <div>
                <table class="table table-condensed table-responsive">
                    <tr>
                        <td>
                            <h3>Profile @Html.ActionLink("Edit", "EditAccount")</h3>
                            <ul>
                                <li>User Name: @Model.UserName</li>
                                <li>First Name: @Model.FirstName </li>
                                <li>Last Name: @Model.LastName </li>
                                <li>Email: @Model.Email</li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
