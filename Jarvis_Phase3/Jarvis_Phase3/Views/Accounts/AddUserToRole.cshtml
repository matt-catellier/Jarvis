@model Jarvis_Phase3.Models.UserRole

@{
    ViewBag.Title = "AddUserToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <p>@DateTime.Now.ToString("F")</p>
    <div class="col-sm-8 page-content">
        <h2 style="margin-bottom: 40px; margin-left: 10px;">@Html.Raw(ViewBag.Title)</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>UserRole</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Apply Changes" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div style="padding-left:20px; border-left: 1px solid #333;" class="col-sm-4 side-bar">

        @Html.ActionLink("Register Providers", "RegisterDevices", null, new { @class = "btn btn-default btn-lg btn-block" })
        @Html.ActionLink("Data View", "Data", null, new { @class = "btn btn-default btn-lg btn-block" })
        @Html.ActionLink("Account View", "ViewAllConsumerAccounts", null, new { @class = "btn btn-default btn-lg btn-block" })
        @Html.ActionLink("AdminDashboard", "AdminDashboard", null, new { @class = "btn btn-default btn-lg btn-block" })
        @Html.ActionLink("AddRole", "AddRole", null, new { @class = "btn btn-default btn-lg btn-block" })
        @Html.ActionLink("AddUserToRole", "AddUserToRole", null, new { @class = "btn btn-default btn-lg btn-block" })

    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
