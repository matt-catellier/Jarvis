
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_AdminDashBoardTheme.cshtml";
}

@section Styles{
    <style>
        body {
            width: 100% !important;
        }

        .view-all {
            float: right;
            margin-top:20px;
            margin-bottom: 10px;
            margin-right: 10px;
        }
        h3 {
            margin-left: 20px;
        }
    </style> 
}
<div class="row">
    <div class="col-sm-12 page-content">
        <h2 style="margin-bottom: 40px; margin-left: 10px;">@Html.Raw(ViewBag.Title)</h2>
        <div class="col-sm-6 clearfix">
            <a class="btn btn-primary view-all" href="@Url.Action("ViewAllConsumerAccounts")"> View All</a>
            <h3> Users </h3>
            @Html.Partial("Partials/_Graphs_Area1")
        </div>
        <div class="col-sm-6">
                <a class="btn btn-primary view-all" href="@Url.Action("Data")"> View All</a>
                <h3> Devices </h3>
                @Html.Partial("Partials/_Graphs_Donut1")
        </div>
    </div>
</div>


