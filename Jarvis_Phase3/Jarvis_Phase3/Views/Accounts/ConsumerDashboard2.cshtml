@model Jarvis_Phase3.Models.NestVM

@{
    ViewBag.Title = "ConsumerDashboard2";
    Layout = "~/Views/Shared/_ConsumerDashboardTheme.cshtml";
}

@section Styles{
    <style>
        .text-right > a {
            margin-right: 10px;
            position: relative;
            bottom: 10px;
        }
        
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Thermostat </h3>
            </div>
            <div class="panel-body">
                @Html.Partial("Partials/ThermostatChart")
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-shield"></i> Smoke Alarm  </h3>
            </div>
            <div class="panel-body">
                @Html.Partial("Partials/smokeCoAlarmChart")            
            </div>
            <div class="text-right">
                <a href="#">View Details <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-video-camera"></i> Camera </h3>
            </div>
            <div class="panel-body">
                @Html.Partial("Partials/CameraTable")
            </div>
            <div class="text-right">
                <a href="#">View Details <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>