
@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/_AdminDashBoardTheme.cshtml";
}

@section Styles {
    <style>
        .row {
            padding: 10px;
        }

        .row > h2 {
            margin-left: 20px;
            text-decoration: underline;
        }

        .panel {
            margin-top: 10px;
        }
    </style>
}

