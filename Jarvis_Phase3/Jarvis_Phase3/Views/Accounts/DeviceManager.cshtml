@model IEnumerable<Jarvis_Phase3.Models.ThermostatVM>
@{
    ViewBag.Title = "DeviceManager";
    Layout = "~/Views/Shared/_DashBoardTheme.cshtml";
}

<h2>DeviceManager</h2>
<div class="container">
    <div class="col-sm-8 page-content">
        <img style="width: 100%;" src="~/images/energy.PNG" />
        <div>
            <table class="table col-md-12">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Current_Temperature)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Target_Temperature)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name_Long)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Device_Id)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Current_Temperature)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Target_Temperature)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name_Long)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device_Id)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>