
@{
    ViewBag.Title = "Password Reset";
    Layout = "~/Views/Shared/_ScrollTheme.cshtml";
}
@section Styles {
    <style>
        .body-content {
            background-image: url('../../images/man-coffee-cup-pen.jpg');
            color: silver;
            padding-top: 40px;
            padding-bottom: 40px;
            min-height: 90%;
            height: auto !important;
            height: 90%;
        }

        #footer {
            position: fixed;
            bottom: 0;
        }
    </style>
}

<div class="message">
    <div class="panel opac-black">
        <div class="panel-body opac-black" style="text-align:center">
            @{
                if (ViewBag.Result == "The password has been successfully reset.")
                {
                    <span class="glyphicon glyphicon-ok-circle"> </span>
                }
                else
                {
                    <span class="glyphicon glyphicon-remove-circle"> </span>
                }
            }
            @Html.Raw(ViewBag.Result)
        </div>
    </div>
</div>
