            <h3>@Html.ActionLink("Login", "Login", "Accounts")</h3><br />
            <h3>@Html.ActionLink("Sign-up for a free trial", "SignUp", "Accounts")</h3><br />
            <h3>@Html.ActionLink("Learn more about Jarvis", "About")</h3><br />
            <h3>@Html.ActionLink("Frequently Asked Questions", "FAQ")</h3><br />
            <h3>@Html.ActionLink("Contact Us", "Contact")</h3><br />
        </div>*@
</div>
@section Scripts {
    <script>
        $(function () {
            var divs = $('.about-support-container > div > .home-writeup');
            console.log(divs);

            var height = 0;
            $.each(divs, function () {
                var currentHeight = $(this).height();
                console.log(currentHeight)
                if (currentHeight > height) {
                    height = currentHeight;
                }
                $(this).height(height)
            })
        })
    </script>
}